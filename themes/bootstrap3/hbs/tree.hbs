{{> html_header }}

{{> navigation }}
<div class="container">

{{> header }}
{{> breadcrumb }}

{{#if files }}
    <table class="table tree">
        <thead>
            <tr>
                <th width="80%">Name</th>
                <th width="10%">Mode</th>
                <th width="10%">Size</th>
            </tr>
        </thead>
        <tbody>
            {{#each files}}
                <tr>
                    <td>
                        {{#eq type "tree"}}
                            <span class="fa fa-folder-open"></span> <a href="/view?repo={{../repo}}&path={{../repopath}}/{{ name }}&branch={{../branch }}">{{ name }}</a>
                        {{/eq}}
                        {{#eq type "folder"}}
                            <span class="fa fa-folder-open"></span> <a href="">{{ name }}</a>
                        {{/eq}}
                        {{#eq type "symlink"}}
                            <span class="fa fa-folder-open"></span> <a href="">{{ name }}</a>
                        {{/eq}}
                        {{#eq type "blob"}}
                            <span class="fa fa-file"></span> <a href="">{{ name }}</a>
                        {{/eq}}

                    </td>
                <td>{{ mode }}</td>
                <td>{{ size }}</td>
            </tr>
                </tr>
            {{/each}}
        </tbody>
    </table>

    {{#if readme }}
    <div class="readme-view">
        <div class="md-header">
            <i class="fa fa-file-text" aria-hidden="true"></i>  <span class="meta">{{ readme.filename }}</span>
        </div>
        <div id="md-content">{{ readme.content }}</div>
    </div>
{{/if}}

{{else}}
    <p>This repository is empty.</p>
{{/if}}


{{> html_footer }}
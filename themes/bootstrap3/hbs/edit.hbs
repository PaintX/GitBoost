    <div class="repository-header">
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit the repos : {{ repo }}
    </div>
    <div class="repository-body">
        {{repository.description}}
    </div>
</div>

{{> html_footer }}
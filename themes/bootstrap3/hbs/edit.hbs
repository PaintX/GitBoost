<div class="container">

{{> header }}
{{> breadcrumb }}

    {{#if msgSuccess}}
        <div class="alert alert-success">
            <strong>Ok! </strong> {{ msgSuccess }}
        </div>
    {{/if}}
    {{#if msgError}}   
        <div class="alert alert-danger">
            <strong>Oops! </strong> {{ msgError }}
        </div>
    {{/if}}


{{> html_header}}
{{> navigation }}
<div class="container">
<br />
    {{#if msgError}}   
        <div class="alert alert-danger">
            <strong>Oops! </strong> {{ msgError }}
        </div>
    {{/if}}
    <br /><br />
<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-5 login-box">
        <div class="panel panel-default">
            <div class="panel-intro text-center">
                <h2 class="logo-title">
                    <span class="logo-icon"><i class="icon icon-search-1 ln-shadow-logo shape-0"></i> </span> Git<span>Boost </span>
                    <!-- <span class="logo-icon"><i class="icon icon-search-1 ln-shadow-logo shape-0"></i> </span> GOOD<span>RACE </span>-->
                </h2>
            </div>
            <div class="panel-body">
                <form method="post" action="">
                    <div class="form-group">
                        <i class="fa fa-user" aria-hidden="true"></i> <label for="sender-email" class="control-label">Login :</label>
                        <div class="input-icon">
                            <input placeholder="Login" type="text" name="login" id="login" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <i class="fa fa-lock"></i> <label for="user-pass" class="control-label">Password :</label>
                        <div class="input-icon">
                            <input type="password" name="password" id="password" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary  btn-block"><i class="fa fa-sign-in"></i> Login </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-sm-4"></div>
</div>
<br /><br /><br />
{{> html_footer}}